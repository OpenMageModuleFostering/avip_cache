<?xml version="1.0" encoding="UTF-8"?>
	<config>
		<modules>
	        <Avip_Cache>
	            <version>0.1</version>
	        </Avip_Cache>
	    </modules>
    	<global>
			<models>
				<product>
	                   <class>Avip_Cache_Model_Product</class>
				</product>
			</models>
			<events>
	            <checkout_cart_product_add_after>
	              <observers>
	                <avip>
	                  <type>singleton</type>
	                  <class>product/observer</class>
	                  <method>add_clean</method>
	                </avip>
	              </observers>
	            </checkout_cart_product_add_after> 
	            <catalog_product_collection_load_after>
	              <observers>
	                <avip>
	                  <type>singleton</type>
	                  <class>product/observer</class>
	                  <method>add</method>
	                </avip>
	              </observers>
	            </catalog_product_collection_load_after> 
	            <wishlist_add_product>
	              <observers>
	                <avip>
	                  <type>singleton</type>
	                  <class>product/observer</class>
	                  <method>add_clean</method>
	                </avip>
	              </observers>
	            </wishlist_add_product> 
	            <sales_quote_remove_item>
	              <observers>
	                <avip>
	                  <type>singleton</type>
	                  <class>product/observer</class>
	                  <method>clean</method>
	                </avip>
	              </observers>
	            </sales_quote_remove_item>
	            <controller_front_init_before>
	              <observers>
	                <avip>
	                  <type>singleton</type>
	                  <class>product/observer</class>
	                  <method>start</method>
	                </avip>
	              </observers>
	            </controller_front_init_before>      
	          </events>
        </global>
		<crontab>
	        <jobs>
	            <catalogrule_apply_all>
	                <schedule><cron_expr>0 1 * * *</cron_expr></schedule>
	                <run>
	                	<model>product/dailyUrlCacheUpdate</model>
	                </run>
	            </catalogrule_apply_all>
        	</jobs>
	    </crontab>
      </config>